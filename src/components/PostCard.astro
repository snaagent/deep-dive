---
import CategoryBadge from './CategoryBadge.astro';

interface Props {
  title: string;
  description: string;
  pubDate: Date;
  category: string;
  slug: string;
  heroImage?: string;
  featured?: boolean;
}

const { title, description, pubDate, category, slug, heroImage, featured } = Astro.props;

const formattedDate = pubDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'short',
  day: 'numeric',
});
---

<article class:list={['post-card', { featured }]} data-post-card>
  <a href={`/blog/${slug}`} class="card-link" data-card-link>
    {heroImage && (
      <div class="card-image">
        <img src={heroImage} alt="" loading="lazy" />
      </div>
    )}
    <div class="card-content">
      <div class="card-header">
        <h3 class="card-title">{title}</h3>
        <time class="date" datetime={pubDate.toISOString()}>{formattedDate}</time>
      </div>
      <p class="card-description">{description}</p>
      <div class="card-footer">
        <span class="read-more">
          Read more
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M5 12h14M12 5l7 7-7 7"/>
          </svg>
        </span>
        <CategoryBadge category={category} />
      </div>
    </div>
  </a>
</article>

<style>
  .post-card {
    background: rgba(51, 65, 85, 0.1);
    border: 1px solid var(--color-grid);
    border-radius: var(--radius-md);
    overflow: hidden;
    transition: border-color var(--transition-base), box-shadow var(--transition-base);
    position: relative;
    z-index: 20;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  /* Subtle warm glow overlay for cards */
  .post-card::before {
    content: '';
    position: absolute;
    inset: 0;
    background: radial-gradient(ellipse at center, rgba(232, 222, 211, 0.05) 0%, transparent 70%);
    opacity: 0;
    transition: opacity var(--transition-base);
    pointer-events: none;
  }

  .post-card:hover {
    border-color: var(--color-accent);
    box-shadow: 0 4px 20px rgba(154, 52, 18, 0.2);
  }

  .post-card:hover::before {
    opacity: 1;
  }

  .post-card.featured {
    border-color: var(--color-accent);
    border-width: 2px;
  }

  .card-link {
    display: flex;
    flex-direction: column;
    flex: 1;
    text-decoration: none;
    color: inherit;
    cursor: pointer;
    pointer-events: auto;
  }

  .card-image {
    aspect-ratio: 16/9;
    overflow: hidden;
    background: var(--color-grid);
  }

  .card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-base);
  }

  .post-card:hover .card-image img {
    transform: scale(1.05);
  }

  .card-content {
    padding: var(--space-md) var(--space-lg) var(--space-lg);
    position: relative;
    z-index: 1;
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .card-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: var(--space-sm);
    margin-bottom: var(--space-xs);
  }

  .card-title {
    font-family: var(--font-heading);
    font-size: 1.375rem;
    font-weight: 500;
    margin: 0;
    color: var(--color-text);
    line-height: 1.3;
    transition: color var(--transition-fast);
  }

  .post-card:hover .card-title {
    color: var(--color-accent);
  }

  .card-description {
    font-size: 0.9375rem;
    color: var(--color-text-muted);
    line-height: 1.7;
    margin-bottom: var(--space-sm);
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    min-height: calc(0.9375rem * 1.7 * 3);
  }

  .card-footer {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-top: auto;
    padding-top: var(--space-sm);
    border-top: 1px solid rgba(232, 222, 211, 0.1);
  }

  .date {
    font-family: 'Courier New', monospace;
    font-size: 0.7rem;
    color: var(--color-text-muted);
    letter-spacing: 0.02em;
    white-space: nowrap;
    flex-shrink: 0;
  }

  .read-more {
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
    font-family: var(--font-accent);
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-accent);
  }

  .read-more svg {
    width: 14px;
    height: 14px;
    transition: transform var(--transition-fast);
  }

  .post-card:hover .read-more svg {
    transform: translateX(4px);
  }
</style>

<script is:inline>
  // Ensure post card clicks navigate properly and don't trigger food drops
  document.addEventListener('DOMContentLoaded', function() {
    document.querySelectorAll('[data-post-card]').forEach(function(card) {
      card.addEventListener('click', function(e) {
        e.stopPropagation();
        // Find the link and navigate
        var link = card.querySelector('[data-card-link]');
        if (link && link.href) {
          window.location.href = link.href;
        }
      });
    });
  });
</script>
